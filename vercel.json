{
    "version": 2,
    "builds": [
      { 
        "src": "app.py", 
        "use": "@vercel/python", 
        "functions":{
          "api/app": {
            "maxDuration": 20
          }
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "app.py"
      }
    ],
    "env": {
      "FLASK_ENV": "production"
    }

}